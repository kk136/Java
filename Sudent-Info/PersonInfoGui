    private void SaveActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_SaveActionPerformed
        int col = 0;
        int row = jTable1.getSelectedRow();
        String f = FirstName.getText();
        String l = LastName.getText();
        String c = Class.getText();
        String b = Batch.getText();
        String e = Enroll.getText();

        if ((FirstName.getText()).equals("") || (LastName.getText()).equals("") || (Class.getText()).equals("")
                || (Class.getText()).equals("") || (Batch.getText()).equals("") || (Enroll.getText()).equals("")) {
            JOptionPane.showMessageDialog(null, "Please fill all the fields");
        } else {
            jTable1.setValueAt(f, row, col++);
            jTable1.setValueAt(l, row, col++);
            jTable1.setValueAt(e, row, col++);
            jTable1.setValueAt(c, row, col++);
            jTable1.setValueAt(b, row, col++);

            dispose();
        }


    }//GEN-LAST:event_SaveActionPerformed

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
